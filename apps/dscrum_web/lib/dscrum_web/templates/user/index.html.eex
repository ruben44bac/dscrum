

<div class="titulo col s12" align="center">
  Listado Usuarios
</div>
<div class="row">
	<div class="col s12 m8 offset-m2 l6 offset-l3 listado color-text-input">
		<table>
			<%= for user <- @users do %>
				<tr>
					<td>
						<div class="row ">
							<div class="col s4 m4 l3">
								<img class="radius-img" src="http://localhost:4000/api/user-image?id=<%= user.id %>" alt="Phoenix Framework Logo"/>
							</div>

							<div class="col s6 m6 l8 card-info-user">
								<b>Username: </b> <%= user.username %> <br>
								<b>Nombre: </b> <%= user.name %> <br>
								<b>Apellido: </b> <%= user.surname %> <br>
								<b>Email: </b> <%= user.mail %> <br>
								<b>Tel√©fono: </b> <%= user.phone %> <br>
							</div>
							<div class="col s2 m2 l1">
								<a class="btn-floating btn-small waves-effect waves-light purple"><i class="material-icons">visibility</i></a>
								<a class="btn-floating btn-small waves-effect waves-light purple space-top-icon"><i class="material-icons">edit</i></a>
								<a class="btn-floating btn-small waves-effect waves-light purple space-top-icon"><i class="material-icons">delete</i></a>
							</div>
						</div>
					</td>
					<%# <td>
						<div class="row">
							
						</div>
					</td> %>
				</tr>
			<% end %>
		</table>
	</div>
	
</div>
<div class="btn-nuevo">
	<%= link "+", to: Routes.user_path(@conn, :new), class: "waves-effect btn-floating btn-large waves-effect waves-light purple" %>
</div>

